<?xml version="1.0" encoding="UTF-8"?>
<aiml>
  <category>
    <pattern>*</pattern>
    <template>I have no answer for that.</template>
  </category>
  
  <category>
      <pattern>I like *</pattern>
      <template>
          <think><set name="color"><star/></set></think>
          <condition name ="color">
              <li value ="pink">Flower</li>
              <li value ="red">Blood</li>
              <li value ="blue">Sky</li>
              <li value ="green">Grass</li>
              <li>That's a good color</li>
          </condition>
      </template>
  </category>
  
  <category>
      <pattern>* inosaur</pattern>
      <template><set topic="dinosaur"></set></template>
  </category>
  
  <topic name="DINOSAURS">
      <category>
          <pattern>_</pattern>
          <template>
              <think>
                  <set name ="inp">
                      <star/>
                  </set>
                  <condition name = "inp">
                      <li name="YES"><set topic="">OOO Cool</set></li>
                  </condition>
              </think>
        </template>
      </category>
  </topic>
  
  <category>
      <pattern>HELLO</pattern>
      <template>Hello World!</template>
  </category>
  
   <category>
      <pattern>HI</pattern>
      <template><srai>HELLO</srai></template>
  </category>
  
   <category>
      <pattern>HOWDY</pattern>
      <template><srai>HELLO</srai></template>
  </category>
  
  <category>
      <pattern>Can you tell me your *</pattern>
      <template><srai>What is your <star/></srai></template>
  </category>
  
  <category>
      <pattern>What is your name</pattern>
      <template>My name is ChattyBot and I am <bot name="age"></bot> years old</template>
  </category>
  
  <category>
      <pattern>My name is *</pattern>
      <template><think><set name ="firstname"><star index = "1"/></set></think>
      Your name is <get name = "firstname"></get></template>
  </category>
  
  <category>
      <pattern>Dice</pattern>
      <template>
          <think>
          <set name="dice">
          
          <random>
              <li>1</li>
              <li>2</li>
              <li>3</li>
              <li>4</li>
              <li>5</li>
              <li>6</li>
          </random>
          </set>
          </think>
          You rolled a <get name="dice"></get>.
      </template>
  </category>
  
  <category>
      <pattern>Ask me a question</pattern>
      <template>Do you like pizza?</template>
  </category>
  
  <category>
      <that>Do you like *</that>
      <pattern>No</pattern>
      <template>Well I love <thatstar/></template>
  </category>
  
    <category>
      <that>Do you like *</that>
      <pattern>Yes</pattern>
      <template>Me too, what is your favorite topping?</template>
  </category>
  
</aiml>
